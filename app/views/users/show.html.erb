

  

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      
        <ul class="list-group">
       		<li><h1><%= @user.username %></h1>
			</li>
			<li> <%= image_tag @user.picture.url if @user.picture? %></li> 
        	<li>Joined Codez <%= @user.created_at.strftime("%B %-d, %Y") %> </li>
       		<li><%= link_to "Update profile", edit_user_path(current_user) %></li>
       	</ul>

   
      
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Topic posts (<%= @user.posts.count %>)</h3>
      <ol class="microposts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>