<h1>Hello, <%= @user.first_name %><h1>


<%= render partial: "picture", locals: {user: @user} %>  
	<ul>
		<li>First name: <%= @user.first_name %></li>
		<li>Last name: <%= @user.last_name %></li>
		<li>Email address: <%= @user.email %></li>
		<li>Administrator: <%= @user.administrator? %></li>
	</ul>

	


	<h2>Topics by this author: </h2>
        <% @user.posts.each do |post| %>
        
        <h3><%= link_to post.title, post %> </h3>
        
        <% end %>

        <%= button_to "New Post", new_post_path, :class => "btn btn-primary", :method => :get %>
  

