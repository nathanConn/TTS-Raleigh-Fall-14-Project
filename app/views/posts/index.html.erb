<h1>All Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Topic</th>
      <th>Body</th>
      <th>Created by</th>
   
      
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td width="35%"><%= truncate(post.body, length: 150, omission: '... (continued)') %></td>
        <td><%= link_to post.user.username, post.user %> <%= time_ago_in_words(post.created_at) %> ago</td>
        
        
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to "New Post", new_post_path, :class => "btn btn-primary", :method => :get %>

