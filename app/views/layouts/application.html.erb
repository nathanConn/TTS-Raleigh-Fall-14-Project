<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <title>CodEZ</title>
    <%= stylesheet_link_tag 'application' %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
 <!-- Header -->
    <%= render 'layouts/header' %>
    <!-- User actions -->
     <div class="container">
        <% if logged_in? %>
        <ul class="list-inline">
          <li role="presentation">Welcome, <%= current_user.username %></li>
          <li role="presentation"><%= link_to "Profile", current_user %></li>
          <li role="presentation"><%= link_to "Log out", logout_path, method: "delete" %></li>
           <li role="presentation" style="float: right;"> 
      <form id="searchThis" action="/search" style="display: inline;" method="get"><input onfocus="if(this.value==this.defaultValue)this.value='';" value="Search codEZ" type="text" id="searchBox" onblur="if(this.value=='')this.value=this.defaultValue;" vinput="" name="q" /></li>
      <li role="presentation" style="float: right;"> <input id="searchButton" value="Go" type="submit" />
      </li>
        </ul><% end %>
   </br></br>

    <!-- Page Content -->
   <% flash.each do |message_type, message| %>
   <div class=" alert alert-<%= message_type %>"><%= message %></div>
   <% end %>

    <%= yield %>

    <!-- Footer -->
 <%= render 'layouts/footer' %>
    </div>
  </body>
  <%= javascript_include_tag 'application' %>
</html>



